.left-delete-wrap {
    width: 100vw;
    height: 100vh;
    padding: 20px 5px 0;
    box-sizing: border-box;
    background: #eee;
}
.items {
    width: 100%;
    height: 100%;
    background: #eee;
}
.item {
    width: 100%;
    border-bottom: 1px solid #ddd;
    height: 120rpx;
    line-height: 120rpx;
    box-sizing: border-box;
    overflow: hidden;
    position: relative;
    box-shadow: 2rpx 0rpx 5rpx #ccc;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding-left: 15rpx;
    margin-bottom: 20rpx;
    background: #fff;
}
.inner {
    position: absolute;
    top: 0;
}
.txt {
    width: 100%;
    background: #fff;
    z-index: 5;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    transition: left 0.2s ease-in-out;
}
.del {
    background: #e65c5c;
    width: 180rpx;
    height: 100%;
    line-height: 120rpx;
    text-align: center;
    color: #fff;
    z-index: 3;
    right: 0;
}