.ripple{
    width: 100vw;
    height: 100vh;
}
.ripple .container {
    width: 100%;
    height: 500rpx;
    background: #f4f4f4;
    position: relative;
}
.ripple .inner {
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    background-color: rgba(0, 0, 0, .8);
    position: absolute;
    -webkit-transform: scale(0);
    transform: scale(0);
    margin-top: -90rpx;
    z-index: 10;
}
@-webkit-keyframes ripple {
    100% {
        -webkit-transform: scale(12);
        transform: scale(12);
        background-color: transparent;
    }
}